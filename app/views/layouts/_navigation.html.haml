-# navigation styled for Zurb Foundation 5
-# the syntax for data-topbar may need to change for Zurb Foundation 5
%nav.top-bar{"data-top-bar" => true}
  %ul.title-area
    %li.name
      %h1
        = link_to 'Web Emailer', root_path
  .top-bar-section
    %ul.left
      - if user_signed_in?
        %li
          = link_to 'Logout', signout_path
      - else
        %li
          = link_to 'Login', signin_path
      - if user_signed_in?
        - if current_user.has_role? :admin
          %li
            = link_to 'Admin', users_path