%h3 User Info
%div.small-
%p
  User: #{@user.name}
%p
  Email: #{@user.email if @user.email}
%p
  Key: #{@user.key}
%p
  Sent this Month: #{@user.sent}
%p
  Limit: #{@user.limit}
- if Request.find_by_user_id(@user.id)
  %p
    = "Outstanding request for increase by: " + Request.find_by_user_id(@user.id).amount.to_s

= form_tag request_limit_path(@user.id) do

  = label_tag :amount, 'Ask admin to increase monthly limit by'
  = text_field_tag :amount

  = submit_tag 'Ask'
